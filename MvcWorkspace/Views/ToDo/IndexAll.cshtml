@model IEnumerable<ToDoModel>
@{
    ViewData["Title"] = " IndexAll";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">ToDoListALL</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="ToDo" asp-action="AddOrUpdate" class="btn btn-primary">Add New Work</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr class="align-middle text-primary">
                    <th>Work</th>
                    <th>Time</th>
                    <th>Priority</th>
                    <th>Is It Over</th>
                    <th>Update-Delete</th>

                </tr>
            </thead>
            <tbody>

                @foreach (var tdm in Model)
                {

            

                    <tr class="align-middle">
                        <td width="25%">@tdm.Work</td>
                        <td>@tdm.Time</td>
                        <td width="25%">@tdm.Priority </td>
                        <td width="15%" class="">
                            @if (tdm.IsItOver==false)
                            {
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="ToDo" asp-action="Finish" asp-route-Id="@tdm.Id" class="btn btn-outline-primary mx-2">Bitir</a>
                            </div>
                            }
                        </td>
                        <td width="15%" class="">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="ToDo" asp-action="AddOrUpdate" asp-route-Id="@tdm.Id" class="btn btn-outline-primary mx-2">Update</a>
                                <a asp-controller="ToDo" asp-action="Delete" asp-route-Id="@tdm.Id" class="btn btn-outline-danger mx-2">Delete</a>
                            </div>
                        </td>
                    </tr>
                    
                }
            </tbody>
        </table>
    }
    else
    {
        <p>not work yet</p>
    }

</div>