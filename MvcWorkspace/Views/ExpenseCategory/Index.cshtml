@model IEnumerable<ExpenseCategory>
@{
    ViewData["Title"] = "Index";
}

   <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Expense Category List</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="ExpenseCategory" asp-action="AddOrUpdate" class="btn btn-primary">Create new Expense Category</a>
            </div>
        </div>
        <br />

    @if (Model.Count() > 0)
    {
                <table class="table table-bordered table-striped" style="width:100%">
                    <thead>
                        <tr class="align-middle text-primary">
                            <th>Expense Cagetory</th>
                            <th> </th>
                        </tr>
                    </thead>
                    <tbody>
                @foreach (var exCategory in Model)
                {
                                <tr class="align-middle">
                                    <td width="25%">@exCategory.CategoryName</td>
                                    <td width="30%" class="">
                                        <div class="w-100 btn-group" role="group">
                                            <a asp-controller="ExpenseCategory" asp-action="AddOrUpdate" asp-route-Id="@exCategory.Id" class="btn btn-outline-primary mx-2">Update</a>
                                            <a asp-controller="ExpenseCategory" asp-action="Delete" asp-route-Id="@exCategory.Id" class="btn btn-outline-danger mx-2">Delete</a>
                                        </div>
                                    </td>
                                </tr>
                }
                    </tbody>
                </table>
    }
    else
    {
                <p>No Category created yet</p>
    }

    </div>